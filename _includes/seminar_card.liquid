<ul class="card-text font-weight-light list-group list-group-flush">
  {% for content in entry.contents %}
    <li class="list-group-item">
      <div class="row">
        {% if content.date %}
          <div class="col-xs-2 cl-sm-2 col-md-2 text-center" style="width: 75px">
            <table class="table-cv">
              <tbody>
                <tr>
                  <td>
                    <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                      {{- content.date -}}
                    </span>
                  </td>
                </tr>
                {% if content.recording %}
                  <tr>
                    <td>
                      <a href={{ content.recording }}>recording</a>
                    </td>
                  </tr>
                {% endif %}
                {% if content.slides %}
                  <tr>
                    <td>
                      <a href={{ content.slides }}>slides</a>
                    </td>
                  </tr>
                {% endif %}
              </tbody>
            </table>
          </div>
        {% endif %}
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          {% if content.title %}
            <h6 class="title font-weight-bold ml-1 ml-md-4">{{ content.title }}</h6>
          {% endif %}
          {% if content.academic_institution or content.company %}
            <table class="table-cv ml-1 ml-md-4 institution">
              <tbody>
                {% if content.academic_institution %}
                  <tr>
                    <td style="vertical-align: top; text-align: center" class="institution">
                      <i class="fa-solid fa-building-columns iconinstitution"></i>
                    </td>
                    <td class="institution">{{ content.academic_institution }}</td>
                  </tr>
                {% endif %}
                {% if content.company %}
                  <tr>
                    <td style="vertical-align: top; text-align: center" class="company">
                      <i class="fa-solid fa-industry iconindustry"></i>
                    </td>
                    <td class="company">{{ content.company}}</td>
                  </tr>
                {% endif %}
              </tbody>
            </table>
          {% endif %}
          {% if content.abstract%}
            <div class="ml-1 ml-md-4">{{ content.abstract }}</div>
          {% endif %}
          {% if content.bio%}
            <br>
            <div class="ml-1 ml-md-4"><i> Short bio: {{ content.bio }}</i></div>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
